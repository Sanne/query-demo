<?xml version="1.0" encoding="UTF-8"?>
<infinispan
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="urn:infinispan:config:7.1 http://www.infinispan.org/schemas/infinispan-config-7.1.xsd"
   xmlns="urn:infinispan:config:7.1">

   <cache-container name="TestingLocal" default-cache="Votes" statistics="false" shutdown-hook="DONT_REGISTER">

      <local-cache name="Votes">
         <transaction mode="NONE"/>
         <indexing index="ALL">
            <property name="default.directory_provider">ram</property>
         </indexing>
      </local-cache>

   </cache-container>

</infinispan>
